<div class="container">
  <div class="row"> 
    <div class="responsive">
      <div class="container col-sm-12 col-lg-12">
        <table class="all_list" align="center">
        <h1 class="left" style="margin-bottom:25pt display: inline-block">Faculty Staff</h1>
        <a href="/admin/add_faculty" style="display:inline-block; float:right;">Add Faculty</a>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Phone Number</th>
          <th>Admin</th>
          <th>Action</th>
        </tr>
        {{#each faculties}}
        <tr>
          <td>{{this.first_name}} {{this.last_name}}</td>
          <td>{{this.email}}</td>
          <td>{{this.phone}}</td>
          <td>{{this.is_admin}}</td>
          <td><a href="/admin/faculty/{{this.id}}">See More</a></td>
        </tr>
        {{/each}}
        </table>
       </div>
    </div>    
  </div>
</div>