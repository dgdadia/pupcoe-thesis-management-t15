            /*products*/
            .split {
                height: 100%;
                width: 50%;
                position: fixed;
                z-index: 1;
                top: 0;
                overflow-x: hidden;
                padding-top: 20px;
            }
            .left {
                left: 0;
                color: white
                background-color: black;
            }
            .right {
                right: 0;
                background-color: white;
            }
            .centered {
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                text-align: left;
            }
            .centered img {
                width: 420pt;
                border-radius: 10%;
            }
.foot {
    position: fixed;
