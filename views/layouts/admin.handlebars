    width: 100%;
    background-color: black;
    color: white;
    text-align: center;
}
/*Brand List*/
.brand_list {
    width: 100%;
    border-collapse: collapse;
}
.brand_list th, .brand_list td {
    text-align: left;
    padding: 8px;
    border: 1px solid black;
    border-collapse: collapse;
}
.brand_list tr:nth-child(even){background-color: #f2f2f2}
.brand_list th {
    background-color: black;
    color: white;
}
/*Create Product*/
.create_product input[type=text],.create_product input[type=number],.create_product select, .create_product textarea {
    width: 100%;
    padding: 12px;
    border: 1px solid #ccc;
    border-radius: 4px;
    resize: vertical;
}
.create_product label {
    padding: 12px 12px 12px 0;
    display: inline-block;
}
.create_product input[type=submit] {
    background-color: #4CAF50;
    color: white;
    padding: 12px 20px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    float: right;
}
.create_product input[type=submit]:hover {
    background-color: #45a049;
}
.container {
    border-radius: 5px;
    background-color: white;
    padding: 15px;
}
.col-25 {
    float: left;
    width: 25%;
    margin-top: 5px;
}
.col-75 {
    float: left;
    width: 75%;
    margin-top: 5px;
}
/* Clear floats after the columns */
.row:after {
    content: "";
    display: table;
    clear: both;
}
/* Responsive layout - when the screen is less than 600px wide, make the two columns stack on top of each other instead of next to each other */
@media screen and (max-width: 600px) {
    .col-25, .col-75,.create_product input[type=submit] {
        width: 100%;
        margin-top: 0;
    }
}
